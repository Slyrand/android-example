<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Example" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/cyanDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueGray</item>
        <item name="colorSecondaryVariant">@color/blueGrayDark</item>
        <item name="colorOnSecondary">@color/almostBlack</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/almostBlack</item>
        <item name="android:textColorSecondary">@color/cyanDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>